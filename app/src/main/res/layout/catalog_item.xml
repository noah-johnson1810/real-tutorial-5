<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/hat_menu_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher"
        android:contentDescription="@string/menu_hat_icon" />

    <TextView
        android:id="@+id/textItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/dummy_text"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="@+id/hat_menu_icon"
        app:layout_constraintStart_toEndOf="@+id/hat_menu_icon"
        app:layout_constraintTop_toTopOf="@+id/hat_menu_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>